{
  "name": "hangul-typing",
  "version": "0.2.0",
  "description": "Learn Korean typing by playing. Break levels. Master Hangul.",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun build www/src/app.ts --outdir www/dist --minify",
    "build:watch": "bun build www/src/app.ts --outdir www/dist --watch",
    "format": "bunx biome format --write .",
    "format:check": "bunx biome format .",
    "lint": "bunx biome lint .",
    "lint:fix": "bunx biome lint --write .",
    "check:all": "bunx biome check . && bun test:coverage",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.12",
    "@fontsource/ibm-plex-mono": "^5.2.7",
    "@fontsource/ibm-plex-sans": "^5.2.8",
    "@fontsource/ibm-plex-serif": "^5.2.7",
    "@fontsource/nanum-gothic": "^5.2.7",
    "@fontsource/noto-sans-kr": "^5.2.9",
    "@types/bun": "^1.3.6",
    "@vitest/coverage-v8": "^4.0.18",
    "happy-dom": "^20.3.9",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
